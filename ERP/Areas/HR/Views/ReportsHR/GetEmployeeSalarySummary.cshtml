    };

    function fnEditSalary(editId)
    {
        @*alert('fnEditSalary function invoked, Id is: ' + editId);*@
        var employeeCategoryId = $('#EmployeeCategoryID').val();

        var companyid = $('#CompanyID').val();

        var employeeId = editId;

        var monthDate = $('#month').val();
        //const dateString = "2023-03-16";
        const year = monthDate.slice(0, 4); // "2023"
        const month = monthDate.slice(5, 7);

        var urlEditSalary = '@Url.Action("Edit","ReportsHR")';

        var newEditSalaryURL = urlEditSalary + '?year=' + year + '&month=' + month + '&companyId=' + companyid + '&employeeId=' + employeeId + '&employeeCategoryId=' + employeeCategoryId;
        window.location.href = newEditSalaryURL;
